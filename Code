def calculator():
    operation = input("Selecione uma operação (+, -, *, /, %): ")
    try:
        num1 = float(input("Digite o primeiro número: "))
        num2 = float(input("Digite o segundo número: "))
    except ValueError:
        print("Por favor, digite um número válido.")
        return

    if operation == '+':
        result = num1 + num2
    elif operation == '-':
        result = num1 - num2
    elif operation == '*':
        result = num1 * num2
    elif operation == '/':
        if num2 == 0:
            print("Não é possível dividir por zero.")
            return
        result = num1 / num2
    elif operation == '%':
        result = num1 % num2
    else:
        print("Operação inválida. Por favor, selecione (+, -, *, /, %).")
        return

    print("Resultado:", result)

calculator()
